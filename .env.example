# OverSeekv2 Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Server will fail without these
# ===========================================

# PostgreSQL Database URL
DATABASE_URL=postgres://admin:YOUR_SECURE_PASSWORD@postgres:5432/overseek

# JWT Secret for authentication (use a strong random string, min 32 chars)
JWT_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# ===========================================
# RECOMMENDED - For production security
# ===========================================

# Encryption key for sensitive database fields (API tokens, passwords)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# ===========================================
# OPTIONAL - Have sensible defaults
# ===========================================

# Elasticsearch (defaults to http://localhost:9200)
ELASTICSEARCH_URL=http://elasticsearch:9200

# Elasticsearch JVM Heap Size (adjust based on available memory)
# Recommended: 50% of available RAM, max 31g
# ES_HEAP_MIN=512m   # Minimum heap (default: 512m)
# ES_HEAP_MAX=1g     # Maximum heap (default: 1g)

# Redis (defaults to localhost:6379)
REDIS_HOST=redis
REDIS_PORT=6379

# API URL for webhooks/callbacks
API_URL=https://your-domain.com

# Client URL for CORS
CLIENT_URL=https://your-domain.com
CORS_ORIGIN=https://your-domain.com

# ===========================================
# INTEGRATIONS - As needed
# ===========================================

# Gold Price API (for jewelry stores)
GOLD_API_KEY=

# PostgreSQL password for Docker (used by postgres container)
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# ===========================================
# SCALING - Database Read Replicas
# ===========================================

# PostgreSQL read replica URL for analytics queries (optional)
# If not set, all queries use the primary database
# REPLICA_DATABASE_URL=postgres://admin:password@postgres-replica:5432/overseek

