{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@prisma/client": [
                "prisma/generated/prisma"
            ],
            "@prisma/client/*": [
                "prisma/generated/prisma/*"
            ]
        }
    },
    "include": [
        "src",
        "prisma/generated"
    ],
    "exclude": [
        "scripts",
        "src/scripts"
    ]
}