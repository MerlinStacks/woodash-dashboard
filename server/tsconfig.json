{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "declaration": false,
        "noEmitOnError": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "scripts",
        "src/scripts"
    ]
}